<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenLogin"
    android:orientation="vertical"
>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vplogo"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/purple_blue"
        android:textStyle="bold"
        android:text="Welcome to VPIMSR, Sangli"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#7076AE"
        android:textStyle="bold"
        android:text="You are logged in successfully"
    />

    <TextView
        android:id="@+id/textviewUname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#E0E0E0"
        android:textStyle="bold"
    />

</LinearLayout>